<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentPickup"
    >


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center"
            >


            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@color/colorPrimary"
                android:onClick="pickStudent"
                android:text="抽人"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textPickName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="25sp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="80dp">

            <Button
                android:id="@+id/MarkButton1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#3f51b5"
                android:onClick="score1"
                android:text="1"
                android:textColor="@android:color/white" />


            <Button
                android:id="@+id/MarkButton2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="#3f51b5"
                android:onClick="score2"
                android:text="2"
                android:textColor="@android:color/white" />


            <Button
                android:id="@+id/MarkButton3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="#3f51b5"
                android:onClick="score3"
                android:text="3"
                android:textColor="@android:color/white" />


            <Button
                android:id="@+id/MarkButton4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="#3f51b5"
                android:onClick="score4"
                android:text="4"
                android:textColor="@android:color/white" />


            <Button
                android:id="@+id/MarkButton5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="#3f51b5"
                android:onClick="score5"
                android:text="5"
                android:textColor="@android:color/white" />



        </LinearLayout>

    </LinearLayout>
</FrameLayout>